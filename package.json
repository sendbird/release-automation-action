{
  "name": "release-automation-action",
  "version": "0.1.5",
  "private": true,
  "description": "Sendbird Automate release process with GitHub Actions",
  "license": "MIT",
  "author": {
    "name": "Airen Kang",
    "email": "airen.kang@sendbird.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendbird/release-automation-action.git"
  },
  "scripts": {
    "build": "yarn build:tsc && yarn build:action",
    "build:tsc": "tsc",
    "build:action": "ncc build --source-map --license licenses.txt",
    "format": "prettier --write '**/**.ts'",
    "format-check": "prettier --check '**/**.ts'",
    "lint": "eslint src/**/**.ts",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn test"
  },
  "main": "lib/main.js",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.9"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@typescript-eslint/parser": "^4.33.0",
    "@vercel/ncc": "^0.31.1",
    "eslint": "^7.32.0",
    "eslint-plugin-github": "^4.3.2",
    "eslint-plugin-jest": "^25.3.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "prettier": "2.5.1",
    "release-it": "^15.11.0",
    "ts-jest": "^27.1.2",
    "typescript": "^4.4.4"
  }
}
