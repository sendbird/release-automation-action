{
  "name": "release-automation-action",
  "version": "0.2.0",
  "private": true,
  "description": "Sendbird Automate release process with GitHub Actions",
  "license": "MIT",
  "author": {
    "name": "Airen Kang",
    "email": "airen.kang@sendbird.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sendbird/release-automation-action.git"
  },
  "scripts": {
    "build": "yarn build:tsc && yarn build:action",
    "build:tsc": "tsc",
    "build:action": "ncc build --source-map --license licenses.txt",
    "format": "prettier --write '**/**.ts'",
    "format-check": "prettier --check '**/**.ts'",
    "test": "jest",
    "all": "yarn build && yarn format && yarn test"
  },
  "main": "src/main.ts",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.1.1",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/node-fetch": "^2.6.2",
    "node-fetch": "^2.6.9"
  },
  "devDependencies": {
    "@types/node": "^18.11.0",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "^3.5.3",
    "release-it": "^15.11.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.2"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "preserve",
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "always"
  }
}
